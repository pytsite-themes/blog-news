{% if articles | length %}
    <div class="row">
        {% for i in range(0, 2) %}
            {% if articles[i] %}
                {% set article = articles[i] %}
                {% set thumb_css = 'col-xs-B-12 col-xs-6 col-lg-6' %}

                {% include 'v1/article-thumb-1' %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

{% if articles | length > 2 %}
    <div class="row">
        {% for i in range(2, 3) %}
            {% if articles[i] %}
                {% set article = articles[i] %}
                {% set thumb_css = 'col-xs-B-12 col-xs-12 col-lg-12' %}

                {% include 'v1/article-thumb-3' %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
